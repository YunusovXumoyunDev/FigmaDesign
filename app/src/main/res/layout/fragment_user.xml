<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:navigationIcon="@drawable/menu">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="29dp"
            android:src="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:lineHeight="18.75dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#595085"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/profile_ly"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/profile_image"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_image"
                    app:shapeAppearanceOverlay="@style/ShapeProgress" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/profile_item" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profile_image"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angelica Jackson"
                    android:textColor="#595085"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyzer"
                    android:textColor="#C4C4C4"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change profile"
                    android:textColor="#595085"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/strong_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_ly"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strong side:"
                android:textColor="#595085"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#F5F9F9"
                        app:shapeAppearanceOverlay="@style/ShapeUser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Analytics"
                        android:textColor="#479696"
                        android:textSize="12sp" />
                </FrameLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#F5F9F9"
                        app:shapeAppearanceOverlay="@style/ShapeUser" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="Perfectionism"
                        android:textColor="#479696"
                        android:textSize="12sp" />
                </FrameLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#F5F9F9"
                        app:shapeAppearanceOverlay="@style/ShapeUser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Analytics"
                        android:textColor="#479696"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weak_side_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/strong_side"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weak side:"
                android:textColor="#595085"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#FFF4F4"
                        app:shapeAppearanceOverlay="@style/ShapeUser" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="Perfectionism"
                        android:textColor="#FF7E73"
                        android:textSize="12sp" />
                </FrameLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#FFF4F4"
                        app:shapeAppearanceOverlay="@style/ShapeUser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Analytics"
                        android:textColor="#FF7E73"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/reports_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weak_side_ly"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="My Reports:"
            android:textColor="#595085"
            android:textSize="24sp" />

        <FrameLayout
            android:id="@+id/vector_ly_1"
            android:layout_width="153dp"
            android:layout_height="128dp"
            android:layout_below="@id/reports_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6F5FB"
                app:shapeAppearanceOverlay="@style/ShapeReports" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/vector_1" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="46dp"
                android:text="Astro- psychological report"
                android:textColor="#403572"
                android:textSize="12sp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="84dp"
                android:text="Some short description of this type of report."
                android:textColor="#9B94B6"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/monthly_ly"
            android:layout_width="153dp"
            android:layout_height="128dp"
            android:layout_below="@id/reports_txt"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/vector_ly_1">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F9F9"
                app:shapeAppearanceOverlay="@style/ShapeReports" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/vector_2" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/calendar_rp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="46dp"
                android:text="Monthly prediction report"
                android:textColor="#479696"
                android:textSize="12sp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="84dp"
                android:text="Some short description of this type of report."
                android:textColor="#ADC5C5"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/daily_ly"
            android:layout_width="153dp"
            android:layout_height="128dp"
            android:layout_below="@id/vector_ly_1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF4F4"
                app:shapeAppearanceOverlay="@style/ShapeReports" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/vector_3" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/check_square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="46dp"
                android:text="Daily Prediction"
                android:textColor="#FF5648"
                android:textSize="12sp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:text="Some short description of this type of report."
                android:textColor="#A27A7A"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/love_ly"
            android:layout_width="153dp"
            android:layout_height="128dp"
            android:layout_below="@id/monthly_ly"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/daily_ly">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1DFBDBE6"
                app:shapeAppearanceOverlay="@style/ShapeReports" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="46dp"
                android:text="Love report"
                android:textColor="#C93F8D"
                android:textSize="12sp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:text="Some short description of this type of report."
                android:textColor="#F5D1E4"
                android:textSize="10sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="54dp"
            android:background="@drawable/scroll_gradient"
            android:elevation="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/home_btn"
                android:layout_height="wrap_content"
                android:background="@drawable/home_2" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_dark" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_square" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/moon" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>