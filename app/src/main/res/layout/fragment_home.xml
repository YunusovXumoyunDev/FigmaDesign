<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:navigationIcon="@drawable/menu">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="29dp"
            android:src="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:lineHeight="18.75dp"
            android:text="@string/home"
            android:textAlignment="center"
            android:textColor="#595085"
            android:textSize="16sp" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:text="NEWS"
                        android:textColor="#595085" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:elevation="2dp"

                                android:text="@string/tex_1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/item_color_1"
                                android:src="@drawable/mask_group"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />
                        </FrameLayout>

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:elevation="2dp"

                                android:text="@string/tex_1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/item_color_2"
                                android:src="@drawable/mask_group"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />
                        </FrameLayout>

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:elevation="2dp"

                                android:text="@string/tex_1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="153dp"
                                android:layout_height="70dp"
                                android:background="@drawable/item_color_3"
                                android:src="@drawable/mask_group"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <TextView
                        android:layout_width="124dp"
                        android:layout_height="28dp"
                        android:text="Daily Task:"
                        android:textColor="#595085"
                        android:textSize="24sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="98dp"
                            android:layout_height="90dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:elevation="2dp"
                                android:text="Daily\nastromeditation"
                                android:textColor="#61598B"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="14dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="52dp"
                                android:elevation="2dp"

                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="#61598B"
                                android:textSize="24sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="29dp"
                                android:layout_marginTop="59dp"
                                android:background="@drawable/image"
                                android:elevation="2dp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F6F5FB"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />

                        </FrameLayout>

                        <Space
                            android:layout_width="11dp"
                            android:layout_height="match_parent" />

                        <FrameLayout
                            android:layout_width="98dp"
                            android:layout_height="90dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:elevation="2dp"
                                android:text="Daily\nastromeditation"
                                android:textColor="#FF5648"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="14dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="52dp"
                                android:elevation="2dp"

                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="#FF5648"
                                android:textSize="24sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="29dp"
                                android:layout_marginTop="59dp"
                                android:background="@drawable/image_2"
                                android:elevation="2dp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFF4F4"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />

                        </FrameLayout>

                        <Space
                            android:layout_width="11dp"
                            android:layout_height="match_parent" />

                        <FrameLayout
                            android:layout_width="98dp"
                            android:layout_height="90dp">

                            <TextView
                                android:layout_width="74dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:elevation="2dp"
                                android:text="Daily mantra"
                                android:textColor="#479696"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="14dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="52dp"
                                android:elevation="2dp"

                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="#479696"
                                android:textSize="24sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="29dp"
                                android:layout_marginTop="59dp"
                                android:background="@drawable/image_3"
                                android:elevation="2dp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F5F9F9"
                                app:shapeAppearanceOverlay="@style/ShapeRectangle" />

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your overall progress is"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 60%"
                            android:textColor="#C93F8D"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@drawable/line_2"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="155.5dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/line_1" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F6F5FB"
                            app:shapeAppearanceOverlay="@style/ShapeRectangle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54dp"
                            android:layout_marginTop="25dp"
                            android:text="How was your day?"
                            android:textColor="#403572"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="23dp"
                            android:background="@drawable/calendar" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="288dp"
                            android:background="@drawable/arrow_right" />

                        <TextView
                            android:layout_width="222dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54dp"
                            android:layout_marginTop="54dp"
                            android:text="@string/text_2"
                            android:textColor="#403572"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFF4F4"
                            app:shapeAppearanceOverlay="@style/ShapeRectangle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54dp"
                            android:layout_marginTop="25dp"
                            android:text="Current Transist: 3rd House"
                            android:textColor="#FF5648"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="23dp"
                            android:background="@drawable/clock" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="288dp"
                            android:background="@drawable/arrow_right_2" />

                        <TextView
                            android:layout_width="222dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54dp"
                            android:layout_marginTop="54dp"
                            android:text="@string/text_2"
                            android:textColor="#A27A7A"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/home_btn"
                android:layout_height="wrap_content"
                android:background="@drawable/home" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/user_btn"
                android:layout_height="wrap_content"
                android:background="@drawable/user" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_square" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book" />

            <Space
                android:layout_width="49dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/moon" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>